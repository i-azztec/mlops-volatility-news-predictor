  "panels": [
    {
      "id": 1,
      "title": "Model AUC Score",
      "type": "stat",
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "postgres_datasource"
          },
          "format": "time_series",
          "rawSql": "SELECT timestamp as time, metric_value FROM volatility_metrics WHERE metric_name = 'auc' ORDER BY timestamp DESC LIMIT 1",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 0.52},
              {"color": "green", "value": 0.6}
            ]
          },
          "min": 0,
          "max": 1
        }
      },
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
      "alert": {
        "conditions": [
          {
            "evaluator": {
              "params": [0.52],
              "type": "lt"
            },
            "operator": {
              "type": "and"
            },
            "query": {
              "params": ["A", "5m", "now"]
            },
            "reducer": {
              "params": [],
              "type": "last"
            },
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "for": "2m",
        "frequency": "10s",
        "handler": 1,
        "name": "Model AUC Drop Alert",
        "noDataState": "no_data",
        "notifications": []
      }
    },
